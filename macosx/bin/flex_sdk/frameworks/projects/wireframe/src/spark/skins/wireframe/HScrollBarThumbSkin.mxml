<!--- The default wireframe skin class for the Spark HScrollBarThumb component. 
         Skin classes in the wireframe package are useful for using as a simple base for a custom skin.
      
       @see spark.components.HScrollBar

      @langversion 3.0
      @playerversion Flash 10
      @playerversion AIR 1.5
      @productversion Flex 4
-->
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark">

    <fx:Metadata>
        /** 
         * @copy spark.skins.spark.ApplicationSkin#hostComponent
         */
        [HostComponent("spark.components.Button")]
    </fx:Metadata> 
    
    <s:states>
        <s:State name="up" />
        <s:State name="over" />
        <s:State name="down" />
        <s:State name="disabled" />
    </s:states>

    <!-- background -->
    <s:Rect left="0" top="0" right="0" bottom="0" minWidth="14" minHeight="14">
        <s:stroke>
            <s:SolidColorStroke color="#666666" />
        </s:stroke>
        <s:fill>
            <s:SolidColor color="#EEEEEE" />
        </s:fill>
    </s:Rect>

    <!-- Gripper -->
    <s:Group horizontalCenter="-1" verticalCenter="0">
        <s:Line xFrom="1" xTo="1" yFrom="0" yTo="6">
            <s:stroke>
                <s:SolidColorStroke color="#666666" pixelHinting="true" />
            </s:stroke>
        </s:Line>
        <s:Line xFrom="4" xTo="4" yFrom="0" yTo="6">
            <s:stroke>
                <s:SolidColorStroke color="#666666" pixelHinting="true" />
            </s:stroke>
        </s:Line>
        <s:Line xFrom="7" xTo="7" yFrom="0" yTo="6">
            <s:stroke>
                <s:SolidColorStroke color="#666666" pixelHinting="true" />
            </s:stroke>
        </s:Line>
    </s:Group>
    
    <!-- shadow line -->
    <s:Line alpha="0.38" right="-1" top="1" bottom="1">
        <s:stroke>
            <s:SolidColorStroke color="#5C5C5C" weight="1" caps="square"/>
        </s:stroke>
    </s:Line>

</s:Skin>
